{
  "compilerOptions": {
    "target": "es6", // Target when you transpile the source code -> tsc
    // "module": "esnext", // The module system to use - Defaults to CommonJS if target is ES3 or ES5 - Usually CommonJS for Node.js apps
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "src"
    // No emit:
    // "noEmit": true, // Set true if using Babel to prevent TypeScript to transpile code - https://www.typescriptlang.org/tsconfig#noEmit
  },
  "include": ["src"]
  // "exclude": ["node_modules", "**/*.spec.ts"]
}
